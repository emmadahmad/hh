<?php if(!empty($collection) && $collection->getSize()): ?>
    <table class="ratings-table table">
        <col width="1" />
        <col />
        <tbody>
            <?php foreach ($collection as $_rating): ?>
                <?php if($_rating->getSummary()): ?>
                    <tr>
                        <th><?php echo $this->__($this->escapeHtml($_rating->getRatingCode())) ?></th>
                        <td>
                        	<?php 
					        	$ratings = $_rating->getSummary()/20; $intpart = floor( $ratings ); $fraction = $ratings - $intpart; $i = 0;
					        ?>
							<div class="rating-box">
								<div class="rating">
								<?php 
									for ($i = 0 ; $i < $intpart ; $i++) echo "<i class=\"rating-icon fa fa-star\"></i>";
									if ($fraction != 0) {echo "<i class=\"rating-icon fa fa-star-half-o\"></i>"; $i++;}
									for ($i; $i < 5 ; $i++) echo "<i class=\"rating-icon fa fa-star-o\"></i>";
								?>
								</div>
							</div>
                        </td>
                    </tr>
                <?php endif; ?>
            <?php endforeach; ?>
        </tbody>
    </table>
<?php endif; ?>

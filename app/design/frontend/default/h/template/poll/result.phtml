<?php if(isset($poll)) : ?>
<div class="block block-poll">
    <div class="block-title">
        <h3><strong><?php echo $this->__('Poll') ?></strong></h3>
    </div>
    <div class="block-content">
        <p class="block-subtitle"><?php echo $this->escapeHtml($poll->getPollTitle()); ?></p>
        <?php if( $poll_answers ): ?>
        <ul id="poll-answers" class="list-unstyled">
            <?php foreach( $poll_answers as $answer ): ?>
                <li>
                    <span class="votes"><strong><?php echo $answer->getVotesCount() ?></strong> (<?php echo $answer->getPercent() ?>%) - </span>
                    <span class="answer"><?php echo $this->escapeHtml($answer->getAnswerTitle()) ?></span>
                </li>
                <li>
                	<div class="progress">
						<div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="<?php echo $answer->getPercent() ?>"	aria-valuemin="0" aria-valuemax="100" style="width: <?php echo $answer->getPercent() ?>%;">
							<span class="sr-only"><?php echo $answer->getPercent() ?>%</span>
						</div>
					</div>
				</li>                
            <?php endforeach; ?>
        </ul>
        <script type="text/javascript">decorateList('poll-answers');</script>
        <?php endif; ?>
    </div>
</div>
<?php endif; ?>

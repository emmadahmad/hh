<?php $_product = $this->getProduct(); ?>
<?php $buttonTitle = $this->__('Add to Cart'); ?>
<?php if($_product->isSaleable()): ?>
    <div class="add-to-cart">        
		<div class="row">
			<?php if(!$_product->isGrouped()): ?>
			<div class="col-xs-2 col-sm-1 col-md-1">
				<label for="qty" class="control-label"><?php echo $this->__('Qty:') ?></label>
			</div>		
			<div class="col-xs-3 col-sm-1 col-md-2">
				<input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo $this->__('Qty') ?>" class="form-control qty" />
			</div>
			<?php endif; ?>
			<div class="col-xs-6 col-xs-offset-1 col-sm-3 col-sm-offset-7 col-md-3 col-md-offset-6">
	        	<button type="button" title="<?php echo $buttonTitle ?>" class="btn btn-primary btn-block btn-cart" onclick="productAddToCartForm.submit(this)">
	        		<i class="fa fa-shopping-cart"></i> &nbsp; &nbsp;
	        		<?php echo $buttonTitle ?>
        		</button>
        	</div>
	        <?php echo $this->getChildHtml('', true, true) ?>
			</div>
        
    </div>
<?php endif; ?>
